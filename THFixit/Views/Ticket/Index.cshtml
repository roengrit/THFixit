@model THFixit.Models.ModelView.TicketView
@{
    ViewData["Title"] = "Add New Ticket";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    @if (Model.Ret.Ok && !string.IsNullOrEmpty(Model.Ret.Messsage))
    {
    <div id="top-alert">
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            @Model.Ret.Messsage
        </div>
        <script>
            $('#top-alert').fadeOut(1000);
        </script>
    </div>
    }
    else if (!Model.Ret.Ok && !string.IsNullOrEmpty(Model.Ret.Messsage))
    {
    <div id="top-alert">
        <div class="alert  alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            @Model.Ret.Messsage
        </div>
    </div>
    }
    <h1 id="title-content">
        Ticket
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"> Home</a></li>
        <li><a href="/Ticket/List">  Tickets</a></li>
        <li class="active">Add New</li>
    </ol>
</section>
<section class="content">
    <form enctype="multipart/form-data" id="ticket-form" method="post">
        <input asp-for="BranchId" type="hidden" />
        <div class="row">
            <div class="col-md-8">
                <div id="box-req" style="padding:10px;" class="panel panel-default">
                    <div class="box-body">
                        <div class="row form-group-ex">
                            <div class="col-md-12">
                                <label for="req-name">Ticket Subject <span class="text-danger">*</span> </label>
                                <input required class="form-control" autocomplete="off" placeholder="Ticket Subject" />
                            </div>
                        </div>
                        <div class="row form-group-ex">
                            <div class="col-md-12">
                                <label for="req-name">Ticket Description <span class="text-danger">*</span></label>
                                <textarea style="min-height:325px;" required class="form-control" autocomplete="off" placeholder="Ticket Description"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div id="box-req" style="padding:10px;" class="panel panel-default">
                    <div class="box-body">
                        <div class="row form-group-ex">
                            <div class="col-md-12">
                                <label for="req-name">
                                    Requestor Name <span class="text-danger">*</span>
                                </label>
                                <select asp-for="RequestorId" class="form-control" required autocomplete="off">
                                    <option>Requestor</option>
                                </select>
                            </div>
                        </div>
                        <div class="row form-group-ex">
                            <div class="col-md-6">
                                <label for="req-name">
                                    Department<span class="text-danger">*</span>
                                </label>
                                <select asp-for="DepartId" class="form-control" required autocomplete="off">
                                    <option>Department</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="req-name">
                                    Building<span class="text-danger">*</span>
                                </label>
                                <select asp-for="BuildingId" class="form-control" required autocomplete="off">
                                    <option>Building</option>
                                </select>
                            </div>
                        </div>
                        <div class="row form-group-ex">
                            <div class="col-md-6">
                                <label for="req-name">
                                    Class<span class="text-danger">*</span>
                                </label>
                                <select asp-for="ClassId" class="form-control" required autocomplete="off">
                                    <option>Class</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="req-name">
                                    Room <span class="text-danger">*</span>
                                </label>
                                <select asp-for="RoomId" class="form-control" required autocomplete="off">
                                    <option>Room</option>
                                </select>
                            </div>
                        </div>
                        <div class="row form-group-ex">
                            <div class="col-md-6">
                                <label class="control-label">Priority <span class="text-danger">*</span></label>
                                <select asp-for="PriorityId" class="form-control" required autocomplete="off">
                                    <option>Priority</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="control-label">Status <span class="text-danger">*</span></label>
                                <select asp-for="StatusId" class="form-control" required autocomplete="off">
                                    <option>Status</option>
                                </select>
                            </div>
                        </div>
                        <div class="row form-group-ex">
                            <div class="col-md-12">
                                <label class="control-label">Contact </label>
                                <input asp-for="Contact" class="form-control" autocomplete="off" placeholder="Contact" />
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer text-right">
                        <div class="btn-group dropup">
                            <a href="/Ticket/List" class="btn btn-default ">Cancel</a>
