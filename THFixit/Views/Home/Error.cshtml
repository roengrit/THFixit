
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Error</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="shortcut icon" type="image/png" href="~/image/favicon.png" />
    <link rel="stylesheet" href="~/css/bootstrap/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/ionicon/css/ionicons.min.css">
    <link rel="stylesheet" href="~/css/AdminLTE.min.css">
    <link rel="stylesheet" href="~/css/icheck/square/blue.css">
    <link rel="stylesheet" href="~/css/fixman.css">
    <style type="text/css">
        .error-content {
            margin-top: 150px;
        }
        .headline {
            margin-top: -20px;
        }
        .error-page > .error-content {
            margin-left:100px;
        }
    </style>
</head>
<body class="hold-transition">
    <section class="content">
        <div class="error-page">
            <div class="error-content">
                <h3><i class="fa fa-warning text-red"></i> Oops!  @Model.ErrTitle .</h3>
                <p>
                    We will work on fixing that right away.
                    Meanwhile, you may <a href="/">return to home</a>
                </p>
            </div>
        </div>
    </section>
</body>
</html>
